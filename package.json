{
  "name": "hawk",
  "version": "0.2.0",
  "description": "Watch your favorite bands like a hawk!",
  "author": "Steve Viselli",
  "private": "true",
  "main": "app/app.jsx",
  "bin": {
    "update-hawk-db": "./bin/update-hawk-db"
  },
  "scripts": {
    "build": "npm install && NODE_ENV=production gulp build",
    "pm2": "pm2 startOrReload ecosystem.json --env production",
    "start": "npm run build && npm run pm2",
    "stop": "pm2 stop ecosystem.json && pm2 delete ecosystem.json",
    "update": "git pull && npm run build && npm run pm2",
    "deploy": "pm2 deploy production",
    "start-updater": "NODE_ENV=production pm2 start bin/update-hawk-db",
    "stop-updater": "pm2 stop update-hawk-db && pm2 delete update-hawk-db"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stevevis/hawk"
  },
  "dependencies": {
    "alt": "^0.18.5",
    "handlebars": "^4.0.5",
    "history": "^4.0.0-1",
    "koa": "^1.2.4",
    "koa-views": "^4.1.0",
    "lodash": "^4.15.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-router": "^2.7.0"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.13.0",
    "babel-register": "^6.14.0",
    "bootstrap": "4.0.0-alpha.4",
    "concurrent-transform": "^1.0.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.4.0",
    "eslint-plugin-react": "^6.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "gulp": "^3.9.1",
    "gulp-awspublish": "^3.3.0",
    "gulp-eslint": "^3.0.1",
    "gulp-inject": "^4.1.0",
    "gulp-inject-string": "^1.1.0",
    "gulp-nodemon": "^2.1.0",
    "gulp-util": "^3.0.7",
    "jquery": "^3.1.0",
    "node-sass": "^3.9.3",
    "nodemon": "^1.10.2",
    "require-dir": "^0.3.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "script-loader": "^0.7.0",
    "style-loader": "^0.13.1",
    "tether": "^1.3.7",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^1.15.1",
    "webpack-hot-middleware": "^2.12.2"
  }
}
